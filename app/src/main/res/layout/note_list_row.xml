<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/grayer">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/notesRowSize"
        android:layout_weight="1"
        android:src="@drawable/pencil"
        android:layout_marginTop="@dimen/rowMargin"
        android:layout_marginBottom="@dimen/rowMargin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/noteIndex"
            android:layout_weight="1"
            android:textSize="@dimen/noteTextSize"
            android:textColor="@color/white">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/noteTitle"
            android:layout_weight="1"
            android:textSize="@dimen/noteTextSize">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/noteContent"
            android:layout_weight="1"
            android:textSize="@dimen/noteTextSize"
            android:textColor="@color/white">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/filePath"
            android:layout_weight="1"
            android:textSize="@dimen/notePathSize"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>
</LinearLayout>